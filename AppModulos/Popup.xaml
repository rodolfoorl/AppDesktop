<theme:MetroWindow x:Class="Desktop.GrupoBW.AppModulos.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.GrupoBW.AppModulos"
        mc:Ignorable="d"
        xmlns:theme="http://metro.mahapps.com/winfx/xaml/controls"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen" Width="800" Height="400"
        Closed="MetroWindow_Closed">
    <Grid>
        <ContentControl Content="{Binding}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</theme:MetroWindow>
